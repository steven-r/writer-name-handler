{
    "name": "writer-name-handler",
    "description": "Handle and process names in markdown documents.",
    "author": "Stephen Reindl",
    "license": "MIT",
    "version": "0.1.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/steven-r/writer-name-handler.git"
    },
    "publisher": "sreindl",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "workspaceContains:**/names.yml",
        "workspaceContains:**/names.yaml",
        "onLanguage:markdown"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "commands": [
            {
                "command": "writer-name-handler.restartServer",
                "title": "Writer Name Handler: Restart Language Server"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run compile:client && npm run compile:server",
        "compile:client": "tsc -p ./client",
        "compile:server": "tsc -p ./server",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "npm run compile && node ./client/out/test/runTest.js"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.2",
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.14.2",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "conventional-changelog-conventionalcommits": "^5.0.0",
        "eslint": "^8.34.0",
        "mocha": "^10.2.0",
        "semantic-release": "^20.1.0",
        "semantic-release-stop-before-publish": "^1.0.0",
        "semantic-release-vsce": "^5.5.6",
        "typescript": "^4.9.5"
    }
}
